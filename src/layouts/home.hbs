{{>_start}}
<main class="main main-full">
    <div class="container-fluid">
        <div class="opener">
            <div class="hr hr-top"></div>
            <img class="img-responsive" style="margin: 0 auto;" src="/img/logo.png">
            <div class="hr hr-bottom"></div>
            <div class="awards">
                {{#each awards}}
                <div class="award">
                    <img src="/img/awards/{{img}}" alt="">
                    <div>{{{label}}}</div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>
{{>_end}}