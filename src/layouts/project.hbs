{{>_start}}

<div class="content">
    <section id="project-detail" class="project-details-info">
        <div class="container">
            <div class="row">
                <header class="text-center col-md-8 col-md-offset-2">
                    <h2 class="section-title">{{title}}</h2>
                </header>
            </div>
        </div>
        <div class="container" style="max-width: 600px">
            <div class="row portfolio-meta" style="margin-bottom: 2rem">
                <div class="col-sm-6 col-meta">
                    <h5>Category</h5>
                    <span>{{category}}</span>
                </div>
                <div class="col-sm-6 col-meta">
                    <h5>Date</h5>
                    <span>{{pdate}}</span>
                </div>
            </div>
            <div class="row portfolio-meta">
                <div class="col-sm-6 col-meta">
                    <h5>Designers</h5>
                    <span>{{designers}}</span>
                </div>
                <div class="col-sm-6 col-meta">
                    <h5>Photography</h5>
                    <span>{{photography}}</span>
                </div>
            </div>
        </div>
    </section>
</div>

{{#if hasVideo}}
<div class="container" style="display: flex; justify-content:center">
    <iframe src="{{videoUrl}}" width="750" height="422" frameborder="0" style="display:block"
        allow="autoplay; fullscreen" allowfullscreen></iframe>
</div>
{{/if}}

<section class="section-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                {{#each description}}
                <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    </div>
</section>

<section class="section-sm">
    <div class="container">
        {{#each photos}}
        <img class="img-responsive" src="/img/projects/{{../paths.name}}/{{this}}" style="margin-bottom:.25rem">
        {{/each}}
    </div>
</section>
{{>_end}}