<header class="navbar hidden-md hidden-lg">
    <div>
        <a href="/{{language}}/index.html" class="brand js-target-scroll">
            <img src="/img/logo.png" alt="logo" style="width:246px;">
        </a>

        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <ul class="social-list hidden-xs hidden-sm">
            <li><a href="{{data.globals.social.facebook}}" target="_blank" class="fa fa-facebook"></a></li>
            <li><a href="{{data.globals.social.linkedin}}" target="_blank" class="fa fa-linkedin"></a></li>
            <li><a href="{{data.globals.social.instagram}}" target="_blank" class="fa fa-instagram"></a></li>
        </ul>

        <nav class="nav-mobile hidden-md hidden-lg">
            <div class="collapse navbar-collapse" id="nav-collapse">
                <ul class="nav-mobile-list">
                    {{#each data.globals.menu}}
                    <li class="{{equal ../paths.name page " active"}}">
                        <a href="/{{../lang}}{{page}}.html">{{label}}</a>
                    </li>
                    {{/each}}
                    <li class="text-right">
                        <a href="/index.html" style="display:inline-block; padding:1rem">[en]</a>
                        <a href="/el/index.html" style="display:inline-block; padding:1rem">[el]</a>
                </ul>
            </div>
        </nav>
    </div>
</header>
